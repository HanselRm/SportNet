﻿@using SportNet.Core.Application.ViewModels;
@using SportNet.Core.Application.ViewModels.Users;
@model SaveUserViewModel;
@{
    Layout = null;

}
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

</head>
<body>
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <form method="post" enctype="multipart/form-data" asp-controller="User" asp-action="Register">

                                    <h2 class="fw-bold mb-2 text-uppercase">Registro</h2>
                                    <p class="text-white-50 mb-5">Llena el siguiente registro!</p>

                                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="Name" type="text" class="form-control form-control-lg" />
                                        <label asp-for="Name" class="form-label">Name</label>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="LastName" type="text" class="form-control form-control-lg" />
                                        <label asp-for="LastName" class="form-label">Apellido</label>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="Phone" type="tel" class="form-control form-control-lg" />
                                        <label asp-for="Phone" class="form-label">Teléfono</label>
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="Email" type="text" class="form-control form-control-lg" />
                                        <label asp-for="Email" class="form-label">Correo</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>


                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="UserName" type="text" class="form-control form-control-lg" />
                                        <label asp-for="UserName" class="form-label">Nombre de usuario</label>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="Password" type="password" class="form-control form-control-lg" />
                                        <label asp-for="Password" class="form-label">Contraseña</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" />
                                        <label asp-for="ConfirmPassword" class="form-label">Confimar Contraseña</label>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <input asp-for="Status" type="hidden" value="false" />

                                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Registro</button>
                                </form>
                            </div>

                            <div>
                                <p class="mb-0">
                                    Tienes una cuenta? <a asp-controller="Home" asp-action="Index" class="text-white-50 fw-bold">Sign Up</a>
                                </p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>